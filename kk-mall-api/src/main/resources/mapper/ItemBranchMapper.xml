<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kk.mall.api.biz.item.branch.ItemBranchMapper">
    <resultMap id="ItemBranchMap" type="com.kk.mall.api.biz.item.branch.ItemBranch">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="logo_mini_size_url" property="logoMiniSizeUrl"/>
        <result column="logo_small_size_url" property="logoSmallSizeUrl"/>
        <result column="sort" property="sort"/>
        <result column="valid" property="valid"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <select id="getBranchList" resultType="com.kk.mall.api.biz.item.branch.BranchMiniLogoVo">
        select
        relation.item_product_id as itemProductId,
        relation.product_code as productCode,
        branch.name as branchName,
        branch.logo_mini_size_url as logoMiniSizeUrl
        from t_item_branch branch
        left join t_item_product_branch_relation relation on relation.item_branch_id = branch.id
        where relation.item_product_id in
        <foreach item="itemProductId" collection="itemProductIdList" separator="," open="(" close=")" index="">
            #{itemProductId}
        </foreach>
    </select>
</mapper>
